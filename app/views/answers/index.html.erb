<h1>Listing answers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
    <th>Cartoon</th>
    <th>Food</th>
    <th>Candy</th>
    <th>Animal</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.name %></td>
    <td><%= answer.color %></td>
    <td><%= answer.cartoon %></td>
    <td><%= answer.food %></td>
    <td><%= answer.candy %></td>
    <td><%= answer.animal %></td>
    <td><%= link_to 'Show', answer %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
    <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

